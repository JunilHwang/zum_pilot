@import url('https://fonts.googleapis.com/css?family=Noto+Serif+KR&display=swap');

only-pc()
  @media (min-width: 1200px) {
    {block}
  }

body
  font-family 'Noto Serif KR', serif, Nanum Gothic, Malgun Gothic, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue';

h1
  color $accentColor

.theme-default-content:not(.custom)
  max-width 800px

.navbar
  .home-link
    position absolute
    right calc(50% + 400px)
    line-height 1
    text-align center
  img.logo
    display block
    height 20px
    margin-right 0
  span.site-name
    font-size 13px
    font-weight normal

.page
  padding-left 0

.sidebar
  +only-pc()
    min-width 150px
    width auto
    left inherit
    right calc(50% + 440px)
    .sidebar-links > li > .sidebar-sub-headers
      position fixed
      left calc(50% + 420px)
      top 80px
      font-size 13px
  a.sidebar-link
    letter-spacing -0.5px
    color #aaa
    .sidebar-sub-headers &.active
      border-left none

.container
  width 1200px
  margin 0 auto

.siteFooter
  background #242729
  padding 30px 0
  font-size 13px
  color #848d95
  text-align center
  position relative
  z-index 30
  p
    padding 0
    margin 0

.copyright
  text-transform uppercase
  color #bbc0c4
  margin-top 50px

{$contentClass}
  img
    box-shadow 0 0 10px #ddd
    vertical-align top
  code
    color #ff3860
    background #f9f1f3